---
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const siteDataPath = path.join(process.cwd(), 'src/data/site.yaml');
const siteData = yaml.load(fs.readFileSync(siteDataPath, 'utf8'));
---

<section class="bg-white py-12 md:py-16">
  <div class="container">

    <!-- Statistics Section - Top -->
    <div class="max-w-5xl mx-auto mb-8" data-stats-section>
      <div class="grid grid-cols-3 gap-8 md:gap-12">

        <!-- Statistic 1: Bedrooms -->
        <div class="flex flex-col items-center text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>
          <div
            class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2"
            data-counter
            data-target={siteData.capacity.total_rooms}
          >0</div>
          <div class="text-base md:text-lg text-charcoal-600 font-medium">pokojů</div>
        </div>

        <!-- Statistic 2: Capacity -->
        <div class="flex flex-col items-center text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <div
            class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2"
            data-counter
            data-target={siteData.capacity.max_guests}
          >0</div>
          <div class="text-base md:text-lg text-charcoal-600 font-medium">osob</div>
        </div>

        <!-- Statistic 3: Rating -->
        <div class="flex flex-col items-center text-center">
          <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-amber-500">
            <svg class="w-full h-full" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
            </svg>
          </div>
          <div class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2">
            <span
              data-counter
              data-target={siteData.rating.score}
              data-decimals="1"
            >0</span><span class="text-xl md:text-2xl text-charcoal-400">/5</span>
          </div>
          <div class="text-base md:text-lg text-charcoal-600 font-medium">hodnocení</div>
        </div>

      </div>
    </div>

    <!-- Horizontal Divider -->
    <div class="max-w-4xl mx-auto mb-8">
      <div class="h-px bg-sand-300"></div>
    </div>

    <!-- Amenities Section - Bottom -->
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-wrap justify-center gap-4 md:gap-6">

        <!-- Amenity 1: Sauna -->
        <div class="flex items-center gap-2 px-4 py-2 bg-sand-50 rounded-full border border-sand-200">
          <div class="w-5 h-5 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12h3m6 0h3m6 0h3M3 6h18M3 18h18"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12v6M16 12v6M12 6v12"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-charcoal-700">Sauna</span>
        </div>

        <!-- Amenity 2: Pro děti -->
        <div class="flex items-center gap-2 px-4 py-2 bg-sand-50 rounded-full border border-sand-200">
          <div class="w-5 h-5 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-charcoal-700">Pro děti</span>
        </div>

        <!-- Amenity 3: Krb -->
        <div class="flex items-center gap-2 px-4 py-2 bg-sand-50 rounded-full border border-sand-200">
          <div class="w-5 h-5 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-charcoal-700">Krb</span>
        </div>

        <!-- Amenity 4: Mazlíčci -->
        <div class="flex items-center gap-2 px-4 py-2 bg-sand-50 rounded-full border border-sand-200">
          <div class="w-5 h-5 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-charcoal-700">Mazlíčci</span>
        </div>

        <!-- Amenity 5: WiFi -->
        <div class="flex items-center gap-2 px-4 py-2 bg-sand-50 rounded-full border border-sand-200">
          <div class="w-5 h-5 text-moss-600">
            <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"></path>
            </svg>
          </div>
          <span class="text-sm font-medium text-charcoal-700">WiFi</span>
        </div>

      </div>
    </div>

  </div>
</section>

<script>
  function animateCounter(element, target, decimals) {
    var current = 0;
    var increment = target / 50; // 50 steps for smooth animation
    var duration = 1500; // 1.5 seconds
    var stepTime = duration / 50;

    function updateCounter() {
      current += increment;
      if (current >= target) {
        current = target;
        if (decimals) {
          element.textContent = current.toFixed(decimals);
        } else {
          element.textContent = Math.round(current);
        }
      } else {
        if (decimals) {
          element.textContent = current.toFixed(decimals);
        } else {
          element.textContent = Math.round(current);
        }
        setTimeout(updateCounter, stepTime);
      }
    }

    updateCounter();
  }

  function initStatsCounter() {
    var statsSection = document.querySelector('[data-stats-section]');
    if (!statsSection) return;

    var hasAnimated = false;

    var observer = new IntersectionObserver(
      function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !hasAnimated) {
            hasAnimated = true;

            // Animate all counters
            var counters = statsSection.querySelectorAll('[data-counter]');
            counters.forEach(function(counter) {
              var target = parseFloat(counter.getAttribute('data-target'));
              var decimals = counter.getAttribute('data-decimals') ? parseInt(counter.getAttribute('data-decimals')) : 0;
              animateCounter(counter, target, decimals);
            });

            observer.disconnect();
          }
        });
      },
      {
        threshold: 0.5
      }
    );

    observer.observe(statsSection);
  }

  // Run initialization when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initStatsCounter);
  } else {
    initStatsCounter();
  }
</script>
