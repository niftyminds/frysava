---
interface Props {
  room: {
    id: number;
    name: string;
    capacity: number;
    type: string;
    floor: string;
    description?: string;
    highlight?: boolean;
    images?: string[];
  };
}

const { room } = Astro.props;

const floorLabels = {
  'přízemí': 'Přízemí',
  'patro': 'Patro',
  'podkroví': 'Podkroví'
};

// Use images from room data, or fallback to default
const images = room.images && room.images.length > 0
  ? room.images
  : ['/images/large/exterier-chalupy-c9c9-570474.webp'];

const hasMultipleImages = images.length > 1;
---

<article
  class:list={[
    "room-card group bg-white rounded-xl overflow-hidden shadow-sm transition-all duration-300",
    "hover:shadow-lg hover:-translate-y-1",
    room.highlight
      ? "border-2 border-moss-200 bg-gradient-to-b from-white to-moss-50/30"
      : "border border-sand-200 hover:border-moss-200"
  ]}
  data-room-floor={room.floor}
  data-room-id={room.id}
>
  <!-- Obrázek / Mini galerie -->
  <div class="relative aspect-[4/3] overflow-hidden bg-sand-100 room-gallery" data-room-id={room.id}>
    <!-- Images container -->
    <div class="gallery-images relative w-full h-full">
      {images.map((imagePath, index) => (
        <img
          src={imagePath}
          alt={`${room.name} - ${room.type} - Fotka ${index + 1}`}
          class={`absolute inset-0 w-full h-full object-cover transition-all duration-500 group-hover:scale-105 ${index === 0 ? 'opacity-100 z-10' : 'opacity-0 z-0'}`}
          data-gallery-image
          data-index={index}
          loading="lazy"
        />
      ))}
    </div>

    <!-- Navigation arrows (only if multiple images) -->
    {hasMultipleImages && (
      <>
        <button
          class="gallery-prev absolute left-2 top-1/2 -translate-y-1/2 z-20 w-11 h-11 bg-white/90 hover:bg-white rounded-full shadow-md flex items-center justify-center transition-all opacity-100 md:opacity-0 md:group-hover:opacity-100"
          aria-label="Předchozí fotka"
          type="button"
        >
          <svg class="w-5 h-5 text-charcoal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
        </button>
        <button
          class="gallery-next absolute right-2 top-1/2 -translate-y-1/2 z-20 w-11 h-11 bg-white/90 hover:bg-white rounded-full shadow-md flex items-center justify-center transition-all opacity-100 md:opacity-0 md:group-hover:opacity-100"
          aria-label="Další fotka"
          type="button"
        >
          <svg class="w-5 h-5 text-charcoal-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        </button>
      </>
    )}

    <!-- Dots indicator (only if multiple images) -->
    {hasMultipleImages && (
      <div class="absolute bottom-3 left-1/2 -translate-x-1/2 z-20 flex gap-1.5" role="status" aria-live="polite" aria-label="Galerie indikátor">
        {images.map((_, index) => (
          <span
            class={`gallery-dot block w-2 h-2 rounded-full transition-all ${index === 0 ? 'bg-white w-4' : 'bg-white/60'}`}
            data-index={index}
            aria-hidden="true"
          ></span>
        ))}
      </div>
    )}

    <!-- Badge - Patro -->
    <span class="absolute top-3 left-3 bg-white/90 backdrop-blur-sm text-xs font-medium text-charcoal-700 px-3 py-1.5 rounded-full shadow-sm z-20">
      {floorLabels[room.floor]}
    </span>

    <!-- Badge - Highlight -->
    {room.highlight && (
      <span class="absolute top-3 right-3 bg-moss-600 text-white text-xs font-medium px-3 py-1.5 rounded-full shadow-sm z-20">
        ⭐ Tip pro skupiny
      </span>
    )}
  </div>

  <!-- Obsah -->
  <div class="p-5">
    <h3 class="font-serif text-xl font-medium text-wood-900 mb-1">
      {room.name}
    </h3>
    <p class="text-sm text-charcoal-500 mb-4">
      {room.type}
    </p>

    <!-- Metainfo -->
    <div class="flex items-center gap-4 text-sm text-charcoal-600">
      <!-- Kapacita -->
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <span class="font-medium">{room.capacity} {room.capacity === 1 ? 'osoba' : room.capacity < 5 ? 'osoby' : 'osob'}</span>
      </div>

      <!-- Patro -->
      <div class="flex items-center gap-2">
        <svg class="w-4 h-4 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
        </svg>
        <span>{floorLabels[room.floor]}</span>
      </div>
    </div>

    <!-- Popis (pokud existuje) -->
    {room.description && (
      <p class="mt-4 pt-4 border-t border-sand-100 text-sm text-charcoal-600 leading-relaxed">
        {room.description}
      </p>
    )}
  </div>
</article>

<style>
  .room-card:focus-visible {
    outline: 2px solid theme('colors.moss.600');
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .room-card,
    .room-card img {
      transition: none;
    }

    .room-card:hover {
      transform: none;
    }

    .room-card:hover img {
      transform: none;
    }
  }
</style>

<script>
  // Room gallery navigation
  document.addEventListener('DOMContentLoaded', () => {
    const galleries = document.querySelectorAll('.room-gallery');

    galleries.forEach(gallery => {
      const images = gallery.querySelectorAll('[data-gallery-image]');
      const dots = gallery.querySelectorAll('.gallery-dot');
      const prevBtn = gallery.querySelector('.gallery-prev');
      const nextBtn = gallery.querySelector('.gallery-next');

      if (images.length <= 1) return; // No navigation needed for single image

      let currentIndex = 0;

      const showImage = (index: number) => {
        // Hide all images
        images.forEach((img, i) => {
          if (i === index) {
            img.classList.remove('opacity-0', 'z-0');
            img.classList.add('opacity-100', 'z-10');
          } else {
            img.classList.remove('opacity-100', 'z-10');
            img.classList.add('opacity-0', 'z-0');
          }
        });

        // Update dots (visual indicators only)
        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.remove('bg-white/60', 'w-2');
            dot.classList.add('bg-white', 'w-4');
          } else {
            dot.classList.remove('bg-white', 'w-4');
            dot.classList.add('bg-white/60', 'w-2');
          }
        });

        currentIndex = index;
      };

      const nextImage = () => {
        const nextIndex = (currentIndex + 1) % images.length;
        showImage(nextIndex);
      };

      const prevImage = () => {
        const prevIndex = (currentIndex - 1 + images.length) % images.length;
        showImage(prevIndex);
      };

      // Button event listeners
      prevBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        prevImage();
      });

      nextBtn?.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        nextImage();
      });

      // Keyboard navigation
      gallery.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          prevImage();
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          nextImage();
        }
      });

      // Touch/Swipe navigation for mobile
      let touchStartX = 0;
      let touchEndX = 0;
      let touchStartY = 0;
      let touchEndY = 0;

      gallery.addEventListener('touchstart', (e) => {
        touchStartX = e.touches[0].clientX;
        touchStartY = e.touches[0].clientY;
      }, { passive: true });

      gallery.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].clientX;
        touchEndY = e.changedTouches[0].clientY;
        handleSwipe();
      }, { passive: true });

      const handleSwipe = () => {
        const swipeThreshold = 50; // minimum distance for a swipe in px
        const horizontalDiff = touchStartX - touchEndX;
        const verticalDiff = Math.abs(touchStartY - touchEndY);

        // Only trigger swipe if horizontal movement is significantly larger than vertical
        if (Math.abs(horizontalDiff) > swipeThreshold && Math.abs(horizontalDiff) > verticalDiff) {
          if (horizontalDiff > 0) {
            // Swiped left - show next image
            nextImage();
          } else {
            // Swiped right - show previous image
            prevImage();
          }
        }
      };
    });
  });
</script>
