---
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const siteDataPath = path.join(process.cwd(), 'src/data/site.yaml');
const siteData = yaml.load(fs.readFileSync(siteDataPath, 'utf8'));

const currentYear = new Date().getFullYear();
---

<footer class="bg-wood-900 text-sand-100">
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- About -->
      <div>
        <h3 class="text-white text-lg font-serif font-semibold mb-4">Chalupa na Fryšavě</h3>
        <p class="text-sm leading-relaxed text-sand-200">
          {siteData.description}
        </p>
        <div class="mt-4 flex items-center gap-2">
          <svg class="w-5 h-5 text-moss-400" fill="currentColor" stroke="none" viewBox="0 0 24 24">
            <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"></path>
          </svg>
          <span class="font-semibold text-white">{siteData.rating.score}/5</span>
          <span class="text-sm">({siteData.rating.reviews_count} hodnocení)</span>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white text-lg font-serif font-semibold mb-4">Rychlé odkazy</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="#o-chalupe" class="hover:text-white transition-colors">O chalupě</a></li>
          <li><a href="#galerie" class="hover:text-white transition-colors">Galerie</a></li>
          <li><a href="#vybaveni" class="hover:text-white transition-colors">Vybavení</a></li>
          <li><a href="/cenik" class="hover:text-white transition-colors">Ceník</a></li>
          <li><a href="#lokalita" class="hover:text-white transition-colors">Lokalita</a></li>
          <li><a href="#kontakt" class="hover:text-white transition-colors">Kontakt</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white text-lg font-serif font-semibold mb-4">Kontakt</h3>
        <ul class="space-y-3 text-sm">
          <li class="flex items-start gap-2">
            <svg class="w-5 h-5 text-moss-400 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            <span>{siteData.location.address}<br/>{siteData.location.region}, {siteData.location.country}</span>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-moss-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <a href={`mailto:${siteData.contact.email}`} class="hover:text-white transition-colors">
              {siteData.contact.email}
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-moss-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <a href={`tel:${siteData.contact.phone}`} class="hover:text-white transition-colors">
              {siteData.contact.phone}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <div class="border-t border-wood-700 mt-8 pt-8 text-center text-sm">
      <p>&copy; {currentYear} Chalupa na Fryšavě. Všechna práva vyhrazena.</p>
    </div>
  </div>
</footer>
