<style>
  /* Cookie Consent Banner - Adapted for Chalupa design system */
  #cookie-consent-banner {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(44, 62, 50, 0.97);
    backdrop-filter: blur(10px);
    border-top: 3px solid #4A7C59;
    padding: 20px;
    z-index: 9999;
    animation: slideUp 0.4s ease-out;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.3);
  }

  @keyframes slideUp {
    from {
      transform: translateY(100%);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .cookie-consent-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 30px;
  }

  .cookie-consent-text {
    flex: 1;
    color: #F5F1E8;
  }

  .cookie-consent-text p {
    margin: 0 0 8px 0;
    line-height: 1.6;
  }

  .cookie-consent-text p:last-child {
    margin-bottom: 0;
    font-size: 14px;
    opacity: 0.95;
    color: #F5F1E8;
  }

  .cookie-consent-text strong {
    color: #B8D4A8;
    font-size: 18px;
    font-weight: 600;
  }

  .cookie-consent-buttons {
    display: flex;
    gap: 15px;
    flex-shrink: 0;
  }

  .cookie-btn {
    padding: 12px 30px;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    font-family: inherit;
  }

  .cookie-btn-accept {
    background: #4A7C59;
    color: #fff;
  }

  .cookie-btn-accept:hover {
    background: #5A8C69;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(74, 124, 89, 0.4);
  }

  .cookie-btn-reject {
    background: transparent;
    color: #F5F1E8;
    border: 2px solid rgba(245, 241, 232, 0.3);
  }

  .cookie-btn-reject:hover {
    background: rgba(245, 241, 232, 0.1);
    border-color: rgba(245, 241, 232, 0.5);
  }

  /* Responsive */
  @media (max-width: 768px) {
    #cookie-consent-banner {
      padding: 16px;
    }

    .cookie-consent-content {
      flex-direction: column;
      align-items: stretch;
      gap: 16px;
    }

    .cookie-consent-buttons {
      flex-direction: column;
      width: 100%;
      gap: 10px;
    }

    .cookie-btn {
      width: 100%;
      padding: 14px 20px;
    }

    .cookie-consent-text strong {
      font-size: 16px;
    }

    .cookie-consent-text p:last-child {
      font-size: 13px;
    }
  }
</style>

<script>
  // Cookie Consent Management - Enhanced for GA4 Consent Mode v2
  (function() {
    var CONSENT_KEY = 'frysava_cookie_consent';
    var CONSENT_VERSION = '1.1'; // Bumped version for Consent Mode v2

    // Check if consent was already given
    function getConsent() {
      var consent = localStorage.getItem(CONSENT_KEY);
      if (!consent) return null;

      try {
        var data = JSON.parse(consent);
        if (data.version !== CONSENT_VERSION) return null; // Re-ask on version change
        return data;
      } catch (e) {
        return null;
      }
    }

    // Save consent
    function saveConsent(accepted) {
      var data = {
        version: CONSENT_VERSION,
        accepted: accepted,
        timestamp: new Date().toISOString()
      };
      localStorage.setItem(CONSENT_KEY, JSON.stringify(data));
    }

    // Update GA4 consent state
    function updateGtagConsent(granted) {
      if (typeof gtag === 'undefined') {
        console.warn('[CookieConsent] gtag not available');
        return;
      }

      gtag('consent', 'update', {
        'analytics_storage': granted ? 'granted' : 'denied',
        'ad_storage': granted ? 'granted' : 'denied',
        'ad_user_data': granted ? 'granted' : 'denied',
        'ad_personalization': granted ? 'granted' : 'denied'
      });

      console.log('[CookieConsent] Consent updated:', granted ? 'granted' : 'denied');
    }

    // Initialize tracking scripts
    function initializeTracking() {
      updateGtagConsent(true);

      // Dispatch custom event for other scripts to listen to
      window.dispatchEvent(new CustomEvent('cookieConsentGranted'));
    }

    // Revoke tracking
    function revokeTracking() {
      updateGtagConsent(false);

      // Dispatch custom event
      window.dispatchEvent(new CustomEvent('cookieConsentRevoked'));
    }

    // Show cookie banner
    function showCookieBanner() {
      var banner = document.getElementById('cookie-consent-banner');
      if (!banner) return;

      // Small delay to ensure page is rendered
      setTimeout(function() {
        banner.style.display = 'block';
      }, 100);

      // Add event listeners
      var acceptBtn = document.getElementById('cookie-accept');
      var rejectBtn = document.getElementById('cookie-reject');

      if (acceptBtn) {
        acceptBtn.addEventListener('click', function() {
          saveConsent(true);
          initializeTracking();
          banner.style.display = 'none';
        });
      }

      if (rejectBtn) {
        rejectBtn.addEventListener('click', function() {
          saveConsent(false);
          revokeTracking();
          banner.style.display = 'none';
        });
      }
    }

    // Main initialization
    function init() {
      var consent = getConsent();

      if (consent !== null) {
        // User already made a choice
        if (consent.accepted) {
          initializeTracking();
        } else {
          revokeTracking();
        }
      } else {
        // No consent yet - show banner
        // Default consent is already 'denied' via Analytics component
        showCookieBanner();
      }
    }

    // Initialize on page load
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', init);
    } else {
      init();
    }

    // Re-initialize on Astro page navigation (if View Transitions enabled)
    document.addEventListener('astro:page-load', init);
  })();
</script>
