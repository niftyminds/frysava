---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import RoomCard from '../components/RoomCard.astro';
import Footer from '../components/Footer.astro';
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const roomsDataPath = path.join(process.cwd(), 'src/data/rooms.yaml');
const roomsData = yaml.load(fs.readFileSync(roomsDataPath, 'utf8'));

const { hero, rooms, summary, stats_labels, filter_labels, featured_section, cta } = roomsData;

// Počet pokojů podle patra
const floorCounts = {
  přízemí: rooms.filter(r => r.floor === 'přízemí').length,
  patro: rooms.filter(r => r.floor === 'patro').length,
  podkroví: rooms.filter(r => r.floor === 'podkroví').length,
};

// Výpočet kapacity podle patra
const floorCapacity = {
  přízemí: rooms.filter(r => r.floor === 'přízemí').reduce((sum, r) => sum + r.capacity, 0),
  patro: rooms.filter(r => r.floor === 'patro').reduce((sum, r) => sum + r.capacity, 0),
  podkroví: rooms.filter(r => r.floor === 'podkroví').reduce((sum, r) => sum + r.capacity, 0),
};
---

<BaseLayout title="Pokoje - Chalupa na Fryšavě">
  <Header variant="dark" />

  <!-- Hero Section -->
  <section class="relative h-[400px] md:h-[500px] overflow-hidden">
    <img
      src={hero.image}
      alt={hero.image_alt}
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/50"></div>

    <!-- Content Overlay -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-medium mb-4 text-white drop-shadow-lg">
          {hero.title}
        </h1>
        <p class="text-base sm:text-lg md:text-xl mb-6 max-w-2xl mx-auto text-white/90 drop-shadow-md font-light">
          {hero.subtitle}
        </p>
      </div>
    </div>
  </section>

  <main>
    <!-- Summary Statistics Bar -->
    <section class="bg-white py-12 md:py-16">
      <div class="container">
        <div class="max-w-5xl mx-auto" data-stats-section>
          <div class="grid grid-cols-2 sm:grid-cols-4 gap-6 md:gap-8">

            <!-- Statistic 1: Pokoje -->
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
                <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
              </div>
              <div
                class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2"
                data-counter
                data-target={summary.total_rooms}
              >0</div>
              <div class="text-base md:text-lg text-charcoal-600 font-medium">{stats_labels.rooms}</div>
            </div>

            <!-- Statistic 2: Kapacita -->
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
                <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <div
                class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2"
                data-counter
                data-target={summary.total_capacity}
              >0</div>
              <div class="text-base md:text-lg text-charcoal-600 font-medium">{stats_labels.capacity}</div>
            </div>

            <!-- Statistic 3: Patra -->
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
                <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
              </div>
              <div
                class="text-4xl md:text-5xl font-serif font-semibold text-wood-900 mb-2"
                data-counter
                data-target={summary.total_floors}
              >0</div>
              <div class="text-base md:text-lg text-charcoal-600 font-medium">{stats_labels.floors}</div>
            </div>

            <!-- Statistic 4: Přistýlky -->
            <div class="flex flex-col items-center text-center">
              <div class="w-10 h-10 md:w-12 md:h-12 mb-3 text-moss-600">
                <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </div>
              <div class="text-xl md:text-2xl font-serif font-semibold text-wood-900 mb-2">+{summary.extra_beds}</div>
              <div class="text-base md:text-lg text-charcoal-600 font-medium">{stats_labels.extra_beds}</div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <!-- Horizontal Divider -->
    <div class="bg-white">
      <div class="container">
        <div class="max-w-4xl mx-auto">
          <div class="h-px bg-sand-300"></div>
        </div>
      </div>
    </div>

    <!-- Rooms Grid Section -->
    <section class="bg-sand-50 py-12 md:py-16">
      <div class="container">
        <!-- Floor Filter Tabs -->
        <div class="flex justify-center gap-2 mb-8 md:mb-12 overflow-x-auto pb-2" role="tablist">
          <button
            class="filter-tab px-4 sm:px-5 py-2.5 rounded-full text-sm font-medium transition-all duration-300 bg-moss-600 text-white shadow-sm"
            data-filter="all"
            role="tab"
            aria-selected="true"
          >
            {filter_labels.all} ({rooms.length})
          </button>
          <button
            class="filter-tab px-4 sm:px-5 py-2.5 rounded-full text-sm font-medium transition-all duration-300 bg-white text-charcoal-700 border border-sand-200 hover:border-moss-300 hover:text-moss-700"
            data-filter="přízemí"
            role="tab"
            aria-selected="false"
          >
            {filter_labels.ground_floor} ({floorCounts.přízemí})
          </button>
          <button
            class="filter-tab px-4 sm:px-5 py-2.5 rounded-full text-sm font-medium transition-all duration-300 bg-white text-charcoal-700 border border-sand-200 hover:border-moss-300 hover:text-moss-700"
            data-filter="patro"
            role="tab"
            aria-selected="false"
          >
            {filter_labels.first_floor} ({floorCounts.patro})
          </button>
          <button
            class="filter-tab px-4 sm:px-5 py-2.5 rounded-full text-sm font-medium transition-all duration-300 bg-white text-charcoal-700 border border-sand-200 hover:border-moss-300 hover:text-moss-700"
            data-filter="podkroví"
            role="tab"
            aria-selected="false"
          >
            {filter_labels.attic} ({floorCounts.podkroví})
          </button>
        </div>

        <!-- Rooms Grid -->
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8" id="rooms-grid">
            {rooms.map((room) => (
              <RoomCard room={room} />
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Special Highlight Section (Galerie) -->
    <section class="bg-white py-16 md:py-24">
      <div class="container">
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12 items-center">

            <!-- Text Content -->
            <div class="order-2 md:order-1">
              <span class="inline-block bg-moss-100 text-moss-700 text-sm font-medium px-4 py-2 rounded-full mb-6">
                {featured_section.badge}
              </span>

              <h2 class="font-serif text-3xl md:text-4xl text-wood-900 mb-6">
                {featured_section.title}
              </h2>

              <p class="text-lg text-charcoal-600 leading-relaxed mb-8">
                {featured_section.description}
              </p>

              <!-- Features list -->
              <ul class="space-y-3 mb-8">
                {featured_section.features.map(feature => (
                <li class="flex items-center gap-3">
                  <svg class="w-5 h-5 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="text-charcoal-700">{feature}</span>
                </li>
                ))}
              </ul>
            </div>

            <!-- Image -->
            <figure class="order-1 md:order-2">
              <div class="rounded-2xl overflow-hidden shadow-xl">
                <img
                  src={featured_section.image}
                  alt={featured_section.image_alt}
                  class="w-full aspect-[4/3] object-cover"
                  loading="lazy"
                />
              </div>
            </figure>

          </div>
        </div>
      </div>
    </section>

    <!-- Additional Info Note -->
    <section class="bg-sand-50 py-12 md:py-16">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <div class="bg-moss-50 border-2 border-moss-200 rounded-xl p-6 md:p-8">
            <div class="flex items-start gap-4">
              <div class="w-10 h-10 flex items-center justify-center rounded-lg bg-moss-600 text-white flex-shrink-0">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-semibold text-wood-900 mb-2">{summary.note_title}</h3>
                <p class="text-charcoal-700 leading-relaxed">
                  {summary.note}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="bg-moss-600 py-16 md:py-20">
      <div class="container text-center max-w-2xl mx-auto">
        <h2 class="font-serif text-2xl md:text-3xl text-white mb-4">
          {cta.title}
        </h2>
        <p class="text-white/90 text-lg mb-8">
          {cta.description}
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          {cta.buttons.map(button => (
            <a
              href={button.link}
              class={button.style === 'primary'
                ? 'bg-white text-moss-700 hover:bg-sand-100 px-8 py-4 rounded-lg font-medium transition-colors'
                : 'border-2 border-white/80 text-white hover:bg-white/10 px-8 py-4 rounded-lg font-medium transition-colors'
              }
            >
              {button.text}
            </a>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  // Counter animation (re-used from USPSection)
  function animateCounter(element, target, decimals) {
    var current = 0;
    var increment = target / 50;
    var duration = 1500;
    var stepTime = duration / 50;

    function updateCounter() {
      current += increment;
      if (current >= target) {
        current = target;
        element.textContent = decimals ? current.toFixed(decimals) : Math.round(current);
      } else {
        element.textContent = decimals ? current.toFixed(decimals) : Math.round(current);
        setTimeout(updateCounter, stepTime);
      }
    }

    updateCounter();
  }

  function initStatsCounter() {
    var statsSection = document.querySelector('[data-stats-section]');
    if (!statsSection) return;

    var hasAnimated = false;

    var observer = new IntersectionObserver(
      function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting && !hasAnimated) {
            hasAnimated = true;

            var counters = statsSection.querySelectorAll('[data-counter]');
            counters.forEach(function(counter) {
              var target = parseFloat(counter.getAttribute('data-target'));
              var decimals = counter.getAttribute('data-decimals') ? parseInt(counter.getAttribute('data-decimals')) : 0;
              animateCounter(counter, target, decimals);
            });

            observer.disconnect();
          }
        });
      },
      { threshold: 0.5 }
    );

    observer.observe(statsSection);
  }

  // Filter functionality
  function initRoomFilter() {
    var filterTabs = document.querySelectorAll('.filter-tab');
    var roomCards = document.querySelectorAll('.room-card');

    filterTabs.forEach(function(tab) {
      tab.addEventListener('click', function() {
        var filter = this.getAttribute('data-filter');

        // Update tab states
        filterTabs.forEach(function(t) {
          t.classList.remove('bg-moss-600', 'text-white', 'shadow-sm');
          t.classList.add('bg-white', 'text-charcoal-700', 'border', 'border-sand-200');
          t.setAttribute('aria-selected', 'false');
        });

        this.classList.remove('bg-white', 'text-charcoal-700', 'border', 'border-sand-200');
        this.classList.add('bg-moss-600', 'text-white', 'shadow-sm');
        this.setAttribute('aria-selected', 'true');

        // Filter rooms
        roomCards.forEach(function(card) {
          var roomFloor = card.getAttribute('data-room-floor');

          if (filter === 'all' || roomFloor === filter) {
            card.style.display = '';
            card.style.animation = 'fadeIn 0.3s ease-in';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  }

  // Run initializations when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', function() {
      initStatsCounter();
      initRoomFilter();
    });
  } else {
    initStatsCounter();
    initRoomFilter();
  }
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .filter-tab {
    white-space: nowrap;
  }

  .filter-tab:focus-visible {
    outline: 2px solid theme('colors.moss.600');
    outline-offset: 2px;
  }

  @media (prefers-reduced-motion: reduce) {
    .room-card {
      animation: none !important;
    }
  }
</style>
