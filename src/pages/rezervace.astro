---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import yaml from 'js-yaml';
import fs from 'fs';
import path from 'path';

const pricingDataPath = path.join(process.cwd(), 'src/data/pricing.yaml');
const pricingData = yaml.load(fs.readFileSync(pricingDataPath, 'utf8'));

const checkinTime = pricingData.checkin_checkout?.checkin_from || '15:00';
const checkoutTime = pricingData.checkin_checkout?.checkout_until || '10:00';
const depositPercent = pricingData.payment?.deposit_percent || 50;
---

<BaseLayout title="Rezervace - Chalupa na Fryšavě">
  <Header variant="dark" />

  <!-- Hero Section with Background Image -->
  <section class="relative h-[400px] md:h-[500px] overflow-hidden">
    <img
      src="/images/large/exterier-chalupy-c9c9-570474.webp"
      alt="Chalupa na Fryšavě"
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/20 to-black/50"></div>

    <!-- Content Overlay -->
    <div class="absolute inset-0 flex items-center justify-center">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-medium mb-4 text-white drop-shadow-lg">
          Rezervace
        </h1>
        <p class="text-base sm:text-lg md:text-xl mb-6 max-w-2xl mx-auto text-white/90 drop-shadow-md font-light">
          Vyberte si termín a rezervujte si pobyt v naší chalupě
        </p>
      </div>
    </div>
  </section>

  <main>

    <!-- Previo Booking Widget -->
    <section class="section bg-white">
      <div class="container">
        <div class="max-w-5xl mx-auto">
          <!-- Previo Booking Engine -->
          <div class="bg-white rounded-xl shadow-sm border border-sand-200 p-4 md:p-8 min-h-[600px]">
            <div id="previo-booking-engine"></div>
          </div>

          <!-- Alternative contact info -->
          <div class="mt-12 bg-moss-50 border-2 border-moss-200 rounded-xl p-8">
            <h3 class="text-xl font-semibold text-wood-900 mb-4 text-center">
              Potřebujete pomoc s rezervací?
            </h3>
            <p class="text-center text-charcoal-700 mb-6">
              Rádi vám poradíme a pomůžeme s výběrem termínu
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <a href="/#kontakt" class="btn-primary">
                Kontaktní formulář
              </a>
              <a href="tel:+420123456789" class="btn-secondary">
                Zavolat nám
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Info Section -->
    <section class="section bg-sand-50">
      <div class="container">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-center mb-12">Informace o rezervaci</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white rounded-xl p-6 shadow-sm border border-sand-200">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-wood-900 mb-1">Check-in</h3>
                  <p class="text-sm text-charcoal-700">Od {checkinTime} hodin</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm border border-sand-200">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-wood-900 mb-1">Check-out</h3>
                  <p class="text-sm text-charcoal-700">Do {checkoutTime} hodin</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm border border-sand-200">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-wood-900 mb-1">Záloha</h3>
                  <p class="text-sm text-charcoal-700">{depositPercent}% z celkové ceny</p>
                </div>
              </div>
            </div>

            <div class="bg-white rounded-xl p-6 shadow-sm border border-sand-200">
              <div class="flex items-start gap-3 mb-3">
                <svg class="w-6 h-6 text-moss-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <div>
                  <h3 class="font-semibold text-wood-900 mb-1">Potvrzení</h3>
                  <p class="text-sm text-charcoal-700">Do 24 hodin e-mailem</p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 text-center">
            <a href="/cenik" class="text-moss-600 hover:text-moss-700 font-medium">
              Zobrazit celý ceník →
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />

  <!-- Previo Booking Engine Script -->
  <script is:inline>
    var bookingEngineConfig = {
      id: '019b97f7-0310-7318-ace4-f196a69a1b1b', // Plný booking form
      lang: 'cs',
      currency: 'CZK'
    };
    var a = document.createElement('script');
    a.src = 'https://booking.previo.app/loader/';
    document.head.appendChild(a);
  </script>
</BaseLayout>
